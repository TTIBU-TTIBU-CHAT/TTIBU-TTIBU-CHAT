# ==========================================
# AWS Production Environment Variables
# ==========================================
# Copy this file to /home/ec2-user/ttibu-app/.env on your EC2 instance
# and fill in the actual values

# ==========================================
# ECR Configuration
# ==========================================
ECR_REGISTRY=public.ecr.aws/your-alias

# ==========================================
# RDS PostgreSQL Configuration
# ==========================================
RDS_ENDPOINT=your-rds-instance.region.rds.amazonaws.com
RDS_DB_NAME=ttibu_db
RDS_USERNAME=postgres
RDS_PASSWORD=your-secure-password-here

# ==========================================
# ElastiCache Redis Configuration
# ==========================================
REDIS_ENDPOINT=your-elasticache-cluster.cache.amazonaws.com
REDIS_PORT=6379

# ==========================================
# LiteLLM Configuration
# ==========================================
LITELLM_MASTER_KEY=sk-your-master-key-here
LITELLM_MODEL=gpt-4o-mini
LITELLM_POLL_MS=30000

# ==========================================
# Summary API Configuration
# ==========================================
SUMMARY_API_TIMEOUT_MS=10000

# ==========================================
# GMS Configuration
# ==========================================
GMS_BASE_URL=https://your-gms-url.com

# ==========================================
# TTIBU Security
# ==========================================
TTIBU_CRYPTO_SECRET=your-32-character-secret-key-here

# ==========================================
# S3 Configuration (for deployment scripts)
# ==========================================
S3_CONFIG_BUCKET=your-config-bucket-name
